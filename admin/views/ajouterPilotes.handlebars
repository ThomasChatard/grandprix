<h2>Ajouter un pilote</h2>

<form action="#" id="insert" method="post">

  <p>Prénom <input type="text" name="pilprenom" size="10" required></p>
  <p>Nom <input type="text" name="pilnom" size="10" required></p>
  <p>Date de naissance <input type="date" name="pildatenais" size="10" required></p>
  <p>Nationalité <select name="paynum">
      {{#each resultPays}}
          <option value="{{this.paynum}}">{{this.paynat}}</option>
      {{/each}}

  </select></p>
  <p>Ecurie
  <select name="ecunum">
      <option value="NULL">Pas d'écurie</option>
      {{#each resultEcurie}}
        <option value="{{this.ecunum}}">{{this.ecunom}}</option>
      {{/each}}
  </select>

  </p>
  <p>Points <input type="number" name="pilpoints" size="10" required></p>
  <p>Poids <input type="number" name="pilpoids" size="10" required></p>
  <p>Taille <input type="number" name="piltaille" size="10" required></p>
  <p>Description <input type="text" name="piltexte" size="500" required></p>
  <input type="submit" value="Valider"/>
</form>
